<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jason.mapper.ClassesMapper">
    <resultMap id="result" type="Classes">
        <id property="id" column="id"/>
        <collection property="studentList" column="id"
                    select="com.jason.mapper.StudentMapper.selectByClassesId"/>
    </resultMap>
    <sql id="classesColumns">
        s.id as "id",
        s.name as "name"
    </sql>

    <select id="selectAll" resultMap="result">
        select
        <include refid="classesColumns"/>
        from classes s
    </select>

    <select id="selectById" resultType="Classes">
        select
        <include refid="classesColumns"/>
        from classes s
        where id = #{id}
    </select>

    <select id="select" resultMap="result">
        select
        <include refid="classesColumns"/>
        from classes s
        <where>
            <if test="name != null and name != ''">
                AND name like
                <if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
                <if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
            </if>
        </where>
    </select>

    <update id="update">
        update classes set
        name = #{name}
        where id = #{id}
    </update>

    <insert id="insert">
        insert into classes (
          id,
          name
        ) values (
          #{id},
          #{name}
        )
    </insert>
</mapper>